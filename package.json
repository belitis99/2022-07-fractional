{
  "name": "modular-fractional",
  "author": "Fractional Company",
  "version": "2.0.0",
  "description": "Smart contract protocol v2",
  "homepage": "https://github.com/fractional-company/modular-fractional#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fractional-company/modular-fractional.git"
  },
  "scripts": {
    "prettier": "prettier --write 'src/**/*.sol' 'test/*.sol'",
    "prettier:list": "prettier --list-different 'src/**/*.sol'",
    "prettier:check": "prettier --check 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "lint": "npm run prettier && npm run solhint",
    "lint:check": "npm run prettier:check && npm run solhint:check"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.6.0",
    "@rari-capital/solmate": "^6.3.0",
    "clones-with-immutable-args": "./lib/clones-with-immutable-args",
    "dotenv": "^10.0.0",
    "hardhat": "^2.9.6",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.2.24",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solidity-docgen": "0.6.0-beta.14"
  }
}
